upstream app_server {
  server unix:/var/www/<%= name %>/shared/tmp/sockets/unicorn.sock fail_timeout=0;
}

server {
    listen 80;
    client_max_body_size 200M;
    server_name <%= vhost_domain %>;
    root /var/www/<%= name %>/current/public;
    try_files $uri/index.html $uri.html $uri @app;

   location @app {
      proxy_redirect off;
      proxy_pass http://app_server;
      proxy_set_header   Host             $host;
      proxy_set_header   X-Real-IP        $remote_addr;
      proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
   }
   <% if asset_host != "" %>
   location ~ ^/(assets|images|stylesheets|swfs|system)/ {
      proxy_pass http://<%= asset_host %>:80;
      proxy_set_header   Host             $host;
      proxy_set_header   X-Real-IP        $remote_addr;
      proxy_set_header   X-Forwarded-For  $proxy_add_x_forwarded_for;
   }
   <% end %>
   error_page 500 502 503 504 /500.html;
   location = /500.html {
      root /var/www/<%= name %>/current/public;
    }

}

